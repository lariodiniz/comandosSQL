-- CONSULTAR TABELA
SELECT 
CASE WHEN [TESTELOGICO] THEN ELSE [SEOTESTEFORFALSO] END [NOMEDOCAMPO],

[COLUNAS] FROM [TABELA]
WHERE [COLUNATEXTO] LIKE '%QUALQUERTEXTO%' -- RETORNA OS REGISTROS QUE TENHAM 'QUALQUERTEXTO' ESCRITO MESMO QUE TENHA OUTROS CARACTERES ANTES OU DEPOIS
AND, OR
[COLUNAINTEIRO] IN (X,Y,Z) -- RETORNA OS REGISTROS QUE TENHAM OS NUMEROS X,Y,Z NO CAMPO


-- CRIAR TABELA
CREATE TABLE [TABELA] ([COLUNA] INT, [COLUNA] VARCHAR(64), [COLUNA] DATETIME, PRIMARY KEY([COLUNA]))

-- UPDATE
UPDATE [TABELA] SET [COLUNA] = [NOVAINFORMACAO] WHERE [FILTRO]

--ALTERAR
	-- ADD COLUNA
ALTER TABLE [TABELA] ADD [COLUNA] INT   DEFAULT (getdate()) -- DEFAULT É A INFORMAÇÃO QUE SEMPRE TERÁ CASO NÃO SEJA REGISTRADO NADA 

	-- APAGAR COLUNA
ALTER TABLE [TABELA] DROP COLUMN [COLUNA] INT

	-- EDITAR COLUNA
ALTER TABLE [TABELA] ALTER COLUMN [COLUNA] INT

-- INSERT

INSERT INTO [TABELA] ([NOMEDASCOLUNAS]) values ([VALORESPARA AS COLUNAS])

-- ALTERANDO NOME DE COLUNA EM UMA TABELA
exec sp_rename 'NomeTabela.[nomeCampo]', 'NovoNomeCampo', 'column'
